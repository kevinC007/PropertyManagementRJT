<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSelectProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Property" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Step 1: Personal Information"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tenantNameEt"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Tenant Name"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="20dp"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:elevation="10000dp"
            android:text="Add a Photo of Tenant"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Step 2: Lease Terms"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/leaseStartEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lease Start Date"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColorHint="#000000"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/leaseEndEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Lease End Date"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColorHint="#000000"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/rentExpectedEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Rent Expected"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/buttonSaveTenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Tenant" />

    </LinearLayout>

</ScrollView>