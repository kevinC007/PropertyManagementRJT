<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="com.example.shuangzhecheng.propertymanagementrjt.Fragment.TenantSignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/email_tenant_oflandlord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Your Landlord Email Address"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:background="#fff"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/email_tenant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_tenant_oflandlord"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Your Email Address"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:background="#fff"
            android:textColorHint="@color/colorAccent" />

        <EditText
            android:id="@+id/password_tenant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/email_tenant"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#000"
            android:textColorHint="@color/colorAccent"
            android:hint="Your Password"
            android:ems="10"
            android:background="#fff"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password_landlord_reenter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/password_tenant"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#000"
            android:textColorHint="@color/colorAccent"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="#fff"
            android:hint="Re-enter Your Password" />

        <Button
            android:id="@+id/button_tenant_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textview_signuptologin_tenant"
            android:layout_alignParentStart="true"
            android:text="SIGN UP" />

        <TextView
            android:id="@+id/textview_signuptologin_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:text="Already have an account? Log in now!" />

    </RelativeLayout>
</FrameLayout>
