<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboardBackground"
    tools:context="com.example.shuangzhecheng.propertymanagementrjt.RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Which type of account do you want to sign in as ?"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonLandLordlogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="104dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:background="@android:color/background_light"
        android:paddingLeft="20dp"
        android:text="Landlord"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonPMlogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/buttonTenantlogin"
        android:background="@android:color/background_light"
        android:text="Property \n Manager"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonTenantlogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="96dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/buttonVendorlogin"
        android:background="@android:color/background_light"
        android:text="Tenant"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/buttonVendorlogin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:background="@android:color/background_light"
        android:paddingRight="20dp"
        android:text="Vendor"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="91dp" />

    <FrameLayout
        android:id="@+id/loginfragment_adder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonLandLordlogin">

    </FrameLayout>
</RelativeLayout>
