<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="com.example.shuangzhecheng.propertymanagementrjt.LoginActivity">
    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Your Email Address"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:background="#fff"
        android:textColorHint="@color/colorAccent" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/email_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:textColorHint="@color/colorAccent"
        android:hint="Your Password"
        android:ems="10"
        android:background="#fff"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_forgetpassword"
        android:layout_alignParentStart="true"
        android:text="SIGN IN" />
    <TextView
        android:id="@+id/textview_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:text="Forgot Password? Click here!" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password_login"
        android:layout_marginStart="22dp"
        android:layout_marginTop="58dp" >

        <RadioButton
            android:id="@+id/radioButtonlandlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:text="I am Landlord" />

        <RadioButton
            android:id="@+id/radioButtontenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:text="I am Tenant" />
    </RadioGroup>

</RelativeLayout>
