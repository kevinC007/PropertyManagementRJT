<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:layout_editor_absoluteY="95dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10000dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="10000dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/lllinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10000dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/addressEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cityEt"
                android:layout_below="@+id/product_discription"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/defaultimageView"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/cityEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="52dp"
                android:layout_toStartOf="@+id/stateEt"
                android:text="Details"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toEndOf="@+id/defaultimageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/defaultimageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/product_discription"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/skyline"
                tools:layout_editor_absoluteY="0dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>