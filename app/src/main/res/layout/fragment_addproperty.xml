<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Step 1: Property Address"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Enter the rental property address below. The address is used to label each property, and to make it easier to log trips."
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/addressEt"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/cityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/stateEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/zipEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Zip"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/countryEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Country"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="@android:color/background_dark"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Step 2: Property Details"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Next we'd like some basic information about the property."
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/purchasePriceEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Purchase Price"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColorHint="#000000"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:elevation="10000dp"
            android:text="Add a Photo of Your Property"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Step 3: Mortgage Information"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Does this property have a mortgage?"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/radioButtonNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:textColor="@android:color/background_dark" />

        </RadioGroup>

        <Button
            android:id="@+id/addPropertyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Property and Add Tenants" />

    </LinearLayout>

</ScrollView>